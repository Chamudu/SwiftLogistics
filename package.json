{
  "name": "swiftlogistics",
  "version": "1.0.0",
  "description": "A middleware architecture project integrating heterogeneous systems (CMS, ROS, WMS) for logistics management.",
  "main": "index.js",
  "type": "module",
  "private": true,
  "workspaces": [
    "mock-services/*",
    "services/*",
    "adapters/*",
    "shared/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:mock-ros": "npm run dev --workspace=mock-ros",
    "dev:mock-cms": "npm run dev --workspace=mock-cms",
    "dev:mock-wms": "npm run dev --workspace=mock-wms",
    "dev:all-mocks": "npm run dev:mock-ros & npm run dev:mock-cms & npm run dev:mock-wms"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chamudu/SwiftLogistics.git"
  },
